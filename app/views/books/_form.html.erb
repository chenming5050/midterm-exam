<%= form_for book do |f| %>
  <%= f.label :title, "書名" %>
  <%= f.text_field :title %> <br />

  <%= f.label :introduction, "簡介" %>
  <%= f.text_area :introduction %> <br />

  <%= f.label :author, "作者姓名" %>
  <%= f.text_field :author %> <br />

  <%= f.label :price, "售價" %>
  <%= f.text_field :price %> <br />

  <%= f.submit %>
<% end %>