<h1>書本列表</h1>

  <%= link_to "新增書本", new_book_path, class: "btn btn-success" %>

  <table class="table table-hover table-condensed">
    <thead>
      <tr>
        <td>書名</td>
        <td>簡介</td>
        <td>作者姓名</td>
        <td>售價</td>
        <td></td>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.introduction %></td>
        <td><%= book.author %></td>
        <td><%= book.price %></td>
        <td>
        <%= link_to "edit", edit_book_path(book), class: "btn btn-success btn-xs" %>
        <%= link_to "delete", book, method: "delete", data: {confirm: "delete?!"}, class: "btn btn-danger btn-xs" %>
      </td>
      </tr>
      <% end %>
    </tbody>
  </table>